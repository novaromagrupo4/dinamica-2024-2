<%- include("includes/header"); %>

    <script>
        function confirmar(mensagem) {
            const result = confirm(mensagem);
            if (!result) {
                return false;
            }
        }
    </script>

    <div class="container">
        <h3>Lista de Publicações</h3>

        <div>
            <a type="button" class="btn btn-primary btn-custom" href="/blogs/create/">Adicionar Postagem</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" style="min-width: 200px">Título</th>
                    <th scope="col" style="min-width: 300px">Conteúdo</th>
                    <th scope="col">Data</th>
                    <th scope="col" style="min-width: 180px">Opções</th>
                </tr>
            </thead>
            <tbody>
                <% const today=new Date(); today.setHours(0, 0, 0, 0); for (const blog of blogs) { const blogDate=new
                    Date(blog.date); if (blogDate <=today) { const dateOnly=blogDate.toISOString().split('T')[0]; const
                    dateParts=dateOnly.split('-'); const
                    formattedDate=`${dateParts[2]}/${dateParts[1]}/${dateParts[0]}`; %>
                    <tr class="<%= blog.done == 1 ? 'concluido' : '' %>">
                        <td>
                            <%= blog.title %>
                        </td>
                        <td>
                            <%= blog.postagem %>
                        </td>
                        <td>
                            <%= formattedDate %>
                        </td>
                        <td>
                            <a type="button" class="btn btn-success" href="/blogs/edit/<%= blog.id %>">Editar</a>
                            <form action="/blogs/remove/<%= blog.id %>" method="POST" style="display: inline-block"
                                onsubmit="return confirmar('Tem certeza que deseja excluir essa postagem?')">
                                <button style="margin-left: 15px;" type="submit" class="btn btn-danger">Excluir</button>
                            </form>
                        </td>
                    </tr>
                    <% } } %>
            </tbody>
        </table>
    </div>

    <%- include("includes/footer"); %>